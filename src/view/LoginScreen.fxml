<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="359.0" prefWidth="462.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginScreenController">
   <children>
      <AnchorPane layoutX="14.0" layoutY="19.0" prefHeight="327.0" prefWidth="435.0">
         <children>
            <Button fx:id="enterButton" layoutX="100.0" layoutY="191.0" mnemonicParsing="false" onAction="#onActionLoginBtn" prefHeight="34.0" prefWidth="236.0" text="Enter">
               <font>
                  <Font name="Calibri" size="12.0" />
               </font>
            </Button>
            <Button fx:id="exitBtn" layoutX="100.0" layoutY="234.0" mnemonicParsing="false" onAction="#onActionLoginExitBtn" prefHeight="34.0" prefWidth="236.0" text="Exit" />
            <TextField fx:id="usernameLogin" layoutX="101.0" layoutY="101.0" prefHeight="34.0" prefWidth="236.0" promptText="Username" />
            <TextField fx:id="passwordLogin" layoutX="100.0" layoutY="147.0" prefHeight="34.0" prefWidth="236.0" promptText="Password" />
            <Label fx:id="loginLabel" layoutX="100.0" layoutY="53.0" prefHeight="23.0" prefWidth="214.0" text="Login" textAlignment="CENTER">
               <font>
                  <Font name="SansSerif Bold" size="20.0" />
               </font>
            </Label>
            <Label fx:id="zoneLabel" layoutX="7.0" layoutY="14.0" text="Zone ID:" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
